<!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 4.0 Transitional//EN">
<HTML>
<HEAD>
<TITLE> String Formatting </TITLE>
<script>
function  ChangeForm()
{
	var name=document.getElementById("txtName").value;
	document.getElementById("txtName").value=name.toUpperCase();
	document.getElementById("msg").innerHTML="Hello !"+name;
}
function Format(val)
{
	var name=document.getElementById("txtName").value;
	var msg=document.getElementById("msg");

	switch(val)
	{
		case "B":
		{ 
			msg.innerHTML=name.bold();
			break;
		}
		case "I":
		{
			msg.innerHTML=name.italics();
			break;
		}
	}
}
</script>
</HEAD>

<BODY>
<div>
<form>
User Name :
<input type="text" id="txtName" onblur="ChangeForm()">
<input type="button" value="B" onclick="Format(this.value)">
<input type="button" value="I" onclick="Format(this.value)">
<div id="msg" align="center" </div>
</div>
</form>
</BODY>
</HTML>
